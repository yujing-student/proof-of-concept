<body>
<main class="gridcontainter">
    <section>
        <h1>dit is de branch other cards</h1>
        <h1>BNR beats business</h1>
        <!--        https://developer.mozilla.org/en-US/docs/Web/CSS/animation-->

        <img src="assets/BNR-logo.jpg" alt="logo" class="imageBNR">
        <svg width="24" height="25" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 12.5c0 2.3-.8 4.5-2 6.2l.7.8c1.5-1.9 2.4-4.4 2.4-7 0-3.1-1.2-5.9-3.2-8l-.5 1c1.6 1.8 2.6 4.3 2.6 7z" fill="#FFD200"></path>
            <path d="M15.8 6.4l-.5 1c1.1 1.4 1.7 3.2 1.7 5.1 0 1.7-.5 3.2-1.3 4.6l.7.8c1.1-1.5 1.7-3.4 1.7-5.4-.1-2.3-.9-4.4-2.3-6.1z" fill="#FFD200"></path>
            <path d="M14.8 8.4l-.5 1.1c.5.9.8 1.9.8 3 0 1-.3 2-.7 2.9l.7.9c.6-1.1 1-2.4 1-3.7-.1-1.6-.5-3-1.3-4.2zM8.137 8.89a.5.5 0 01-.312.11H4.5a.5.5 0 00-.5.5v5a.5.5 0 00.5.5h3.325a.5.5 0 01.312.11l4.05 3.24a.5.5 0 00.813-.39V6.04a.5.5 0 00-.812-.39L8.137 8.89z" fill="#FFD200"></path>
        </svg>

        <button class="playbutton">
            <audio controls class="audio">
                <source src="<%= audioUrl%>">
            </audio>
            <div class="pauzebutton">
            </div>
        </button>


    </section>
    <section class="nieuws">

        <h1>Nieuws</h1>
        <ul class="nieuws__carousssel">
            <li class="nieuws__filter"><a href="/" class="nieuws__link">alles</a></li>
            <li class="nieuws__filter"><a href="/" class="nieuws__link">economie</a></li>
            <li class="nieuws__filter"><a href="/" class="nieuws__link">niews&politiek</a></li>
            <li class="nieuws__filter"><a href="/" class="nieuws__link">Internationaal</a></li>
        </ul>
    </section>
    <section class="sectionArticles">
        <% firstTenArticles.forEach(article => { %>
            <article class="articles">
                <% if (article.photo) { %>
                    <picture>
                        <source srcset="<%= article.photo.URL %>?width=400&height=300&fit=cover&format=avif"
                                type="image/avif">

                        <source srcset="<%= article.photo.URL %>?width=400&height=300&fit=cover&format=webp"
                                type="image/webp">


                        <img src="https://bnr-external-prod.imgix.net/<%= article.photo.URL %>?width=400&height=300&fit=cover"
                             alt="Image of the house" width="<%= article.photo.URLe %>"
                             height=" <%= article.photo.URL %>" class="article__img"
                        >
                    </picture>
                <% } %>
                <div class="article__informatoon">
                    <h2 class="article__title"><%= article.title %></h2>
                    <p class="article__text"><%= article.introduction %></p>


                </div>




            </article>
        <% }) %>

    </section>


</main>

<%- include('./partials/foot') %>